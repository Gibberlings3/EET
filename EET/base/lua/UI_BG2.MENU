			Infinity_PushMenu('ITEM_IDENTIFY',0,0)
		else
			Infinity_PushMenu('ITEM_ABILITIES',0,0)
		end
	else 
		storeScreen:OpenBag(itemDesc.item.res)
		Infinity_PopMenu()
	end
end

